{
    "name": "bunq/chat-application",
    "description": "Chat application backend with REST API using Slim framework",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.0",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8080 -t public"
    },
    "config": {
        "sort-packages": true
    }
} 